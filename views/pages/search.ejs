<div class="container-fluid py-5 py-sm-4 bg-light">
    <div class="container pb-sm-3 text-primary">
        <div class="m-auto">
            <h1 class="display-2 mb-lg-6">Search what you read!</h1>
            <form action="/search" method="POST">
                <div class="input-group py-3">
                    <div class="form-outline w-75">
                        <input name="search" type="text" id="search" class="form-control" placeholder="Search Books" required/>
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
                <div class="form-group py-1">
                    <label for="sort">Sort by</label>
                    <select class="" name="sort" required>
                            <option value="name">Name</option>
                            <option value="pub">Date</option>
                            <option value="stars">Rating</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <h2 class="mb-3 text-secondary">Search Results:</h2>
        <div class="books_container row">
            <% if (data && data.length != 0) { %>
            <% for(let i = 0; i < data.length; i++) { %>
                <div class="col-sm-6 col-md-4 col-lg-3 text-center text-sm-start">
                    <div class="book_card">
                        <a href="books?name=<%= data[i].name %>" class="text_none text-dark">
                            <img class="smooth rounded img-fluid" src="<%= data[i].cover %>" alt="an image">
                            <h2 class="text-primary mt-2"><%= data[i].name %></h2>
                            <p>
                                <small><%= data[i].author %></small>
                                <small class="text-muted"><%= data[i].pub %></small>
                            </p>
                        </a>
                    </div>
                </div>
            <% } %>
            <% } else { %>
                <p>
                    No books found.
                </p>
            <% } %>
        </div> 
    </div>
</div>